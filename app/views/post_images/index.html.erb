<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title collapse2 animate__animated animate__bounceInDown">Plants</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="page-title-translate collapse3 animate__animated animate__backInRight">みんなの投稿</p>
    </div>
  </div>
  <div class="row animate__animated animate__fadeInUpBig">
    <% @post_images.each do |post_image| %>
      <div class="col-3 side-left"></div>
      <div class="col-8 post-container">
        <div class="plants-image text-center collapse4">
          <%= link_to post_image_path(post_image.id) do%>
            <%= attachment_image_tag post_image, :image, width: "100%", height: "100%", fallcack: "no-image2.png" %>
          <% end %>
        </div>
        <div class="block-content collapse5">
          <%= link_to user_path(post_image.user_id) do %>
            <%= attachment_image_tag post_image.user, :profile_image, class: "rounded-circle float-left", size:"70x70" ,fallback:"noimage.png" %>
          <% end %>
          <h4 id="post-title">
            <%= post_image.title %>
          </h4><br>
          <ul class="post-details">
            <li>By <%= post_image.user.name %>　</li>
            <li>
              <% if post_image.favorites.count == 0 %>
                <i class="far fa-heart"></i>
              <% else %>
                <i class="fas fa-heart" style="color: crimson;></i>
              <% end %>
               <%= post_image.favorites.count %>　
             </li>
            <li><i class="far fa-comment-dots"></i> <%= post_image.comments.count %>　</li>
            <li><i class="far fa-clock"></i> <%= post_image.created_at.strftime('%Y/%m/%d') %></li>
          </ul>
        </div>
      </div>
      <div class="col-3 side-right"></div>
    <% end %>
  </div>
  <%= paginate @post_images %>
</div>