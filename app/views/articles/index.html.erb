<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title animate__animated animate__rotateInUpLeft">Articles</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12 animate__animated animate__rotateInUpRight">
      <p class="page-title-translate">記事一覧</p>
      <%= form_tag(articles_path, :method => "get") do %>
        <%= text_field_tag :search %>
        <%= submit_tag "Search" ,:article_title => nil ,class: "btn btn-success btn-xs"%>
      <% end %>
    </div>
  </div>
  <div class="row animate__animated animate__rotateInUpLeft">
    <% @articles.each do |article| %>
      <div class="col-1 article-side-visual-left"></div>
      <div class="col-10 article-box">
        <div class="article-index-title">
          <%= link_to article_path(article) do %>
            <h2><span class="index-title"><%= article.article_title %></span></h2>
          <% end %>
        </div>
        <div class="article-image">
          <%= link_to article_path(article) do %>
            <%= attachment_image_tag article, :article_image, width:"100%", height:"100%" %>
          <% end %>
        </div>
        <div id="created-at-index"><p>投稿日｜<%= article.created_at.strftime('%Y/%m/%d') %></p></div>
      </div>
      <div class="col-1 article-side-visual-right"></div>
    <% end %>
  </div>
</div>