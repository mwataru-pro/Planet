<div class="container">
  <div class="row">
    <div class="col-12 animate__animated animate__fadeInTopLeft">
      <h1 class="page-title">Article about</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12 animate__animated animate__fadeInTopRight">
      <p class="page-title-translate">記事詳細</p>
    </div>
  </div>
  <div class="row animate__animated animate__backInUp">
    <div class="col-1 show-side"></div>
    <div class="col-10 article-container">
      <div class="article-title">
        <h2><span class="show-title"><%= @article.article_title %></span></h2>
      </div>
      <div class="article-image">
        <%= attachment_image_tag @article, :article_image, width:"100%", height:"100%" %>
      </div>
      <div class="article-content">
        <%= @article.article_content.html_safe %>
      </div>
      <p id="article-created-at">投稿日｜<%= @article.created_at.strftime('%Y/%m/%d') %></p>
    </div>
    <div class="col-1"></div>
  </div>
</div>