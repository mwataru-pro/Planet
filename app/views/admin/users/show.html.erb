<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title">Users about</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="page-title-translate">会員詳細</p><br>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 users-box">
      <div class="users-image">
        <%= attachment_image_tag @user, :profile_image, size:'100x100', class: "rounded-circle", fallback: 'noimage.png' %>
      </div>
      <div class="user-detail">
        <h4>名前：<%= @user.name %></h4><br>
        <h4>メールアドレス：<%= @user.email %></h4><br>

        <%= link_to '編集', edit_admin_user_path, class: "btn btn-success btn-lg", width: "400" %>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
</div>
