<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title">Articles</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="page-title-translate">記事一覧</p>
    </div>
  </div>
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-1"></div>
      <div class="col-10 article-box" style="border: solid silver 2px; margin: 30px 0; padding: 20px;">
        <div class="article-title" style="margin: 10px 10px 10px 0;">
          <%= link_to admin_article_path(article) do %>
            <h2><span style="border-bottom: double yellowgreen 2px;"><%= article.article_title %></span></h2>
          <% end %>
        </div>
        <div class="article-image" style="margin: 20px 0; padding: 10px;">
          <%= link_to admin_article_path(article) do %>
            <%= attachment_image_tag article, :article_image, width:"100%", height:"100%" %>
          <% end %>
        </div>
        <p>投稿日｜<%= article.created_at.strftime('%Y/%m/%d') %></p>
      </div>
      <div class="col-1"></div>
    <% end %>
  </div>
</div>