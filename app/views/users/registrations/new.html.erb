<div class="animate__animated animate__flipInX">
  <h1 class="page-title">Sign up</h1>
  <p class="page-title-translate">新規会員登録</p>
</div>

<div class="container sign-in">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row field">
      <div class="col-2"></div>
      <div class="col-4"><%= f.label "名前" %></div>
      <div class="col-4"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
      <div class="col-2"></div>
    </div>

    <div class="row field">
      <div class="col-2"></div>
      <div class="col-4"><%= f.label "メールアドレス" %></div>
      <div class="col-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      <div class="col-2"></div>
    </div>

    <div class="row field">
      <div class="col-2"></div>
      <div class="col-4"><%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %></div>
      <div class="col-4"><%= f.password_field :password, autocomplete: "new-password" %></div>
      <div class="col-2"></div>
    </div>

    <div class="row field">
      <div class="col-2"></div>
      <div class="col-4"><%= f.label "パスワード確認" %></div>
      <div class="col-4"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      <div class="col-2"></div>
    </div>

    <div class="row sign-in-actions text-center"><br>
      <div class="col-5"></div>
      <%= f.submit "新規会員登録",class: "btn btn-success btn-lg" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
